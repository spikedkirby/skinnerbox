<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".skinnerbutton"
    android:background="@drawable/background"
    android:id="@+id/back">



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boton"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="monospace"
        android:elegantTextHeight="false"
        android:textAlignment="center"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/Tcoins"
        android:layout_toEndOf="@+id/Tcoins" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:id="@+id/tv_encourage"
        android:paddingBottom="0dp"
        android:paddingTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:padding="0dp"
        android:paddingLeft="00dp"
        android:ellipsize="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins:"
        android:id="@+id/Tcoins"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="monospace"
        android:gravity="center_vertical"
        android:textSize="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/center"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageButton"
        android:layout_toLeftOf="@+id/center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin1"
        android:src="@drawable/coin"
        android:layout_above="@+id/center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin2"
        android:src="@drawable/coin"
        android:layout_alignTop="@+id/tv"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin3"
        android:src="@drawable/coin"
        android:layout_above="@+id/tv_encourage"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin4"
        android:src="@drawable/coin"
        android:layout_alignBottom="@+id/center"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin5"
        android:src="@drawable/coin"
        android:layout_below="@+id/center"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin6"
        android:src="@drawable/coin"
        android:layout_below="@+id/coin7"
        android:layout_alignRight="@+id/tv"
        android:layout_alignEnd="@+id/tv"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin7"
        android:src="@drawable/coin"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin8"
        android:src="@drawable/coin"
        android:layout_above="@+id/imageButton"
        android:layout_toRightOf="@+id/center"
        android:layout_toEndOf="@+id/center"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin9"
        android:src="@drawable/coin"
        android:layout_alignTop="@+id/tv_encourage"
        android:layout_toLeftOf="@+id/coin5"
        android:layout_toStartOf="@+id/coin5"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/coin10"
        android:src="@drawable/coin"
        android:visibility="invisible"
        android:layout_alignTop="@+id/Tcoins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
